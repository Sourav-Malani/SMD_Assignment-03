<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".RentItem">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lay_up"
        android:layout_marginTop="20dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:onClick="back"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_24" />

        <!-- Text -->
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:textSize="30sp"
            android:layout_marginLeft="17dp"
            android:text="item"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:textSize="20sp"
            android:layout_marginLeft="175dp"
            android:text="Report"
            android:onClick="report"
            android:clickable="true"
            android:textColor="#FF9800"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/lay_up"
        android:background="#B3B3B3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lay_up1"
        android:layout_below="@id/background_image"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:text="$12"
            android:textColor="#FF2222"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:text="/hr" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/lay_up1"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:text="Name of items comes here"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layup1"
        android:layout_below="@+id/text_1"
        android:layout_marginTop="1dp">

        <!-- Location Button -->
        <ImageButton
            android:id="@+id/location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_location_on_24" />

        <!-- Location Text -->
        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:text="Islamabad" />


        <!-- Text -->
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:layout_marginLeft="150dp"
            android:text="7th Mar, 2023" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/layup1"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris nec nisi a sem elementum condimentum. Proin volutpat erat tortor, eu gravida orci efficitur eget." />



    <RelativeLayout
        android:id="@+id/user2_chat"
        android:layout_below="@+id/text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user2_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0.2"
            android:src="@drawable/person"/>
        <TextView
            android:id="@+id/user2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user2_image"
            android:layout_marginStart="16dp"
            android:text="Ryan Calzoni"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user2_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user2_name"
            android:layout_toEndOf="@id/user2_image"
            android:layout_marginStart="16dp"
            android:text="24 items rented"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/chat"
            android:layout_toEndOf="@id/user2_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="0dp"
            android:onClick="back"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/chat_roundbackground_grey" />

    </RelativeLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_below="@+id/user2_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Rent it"
        android:onClick="Login"
        android:clickable="true"
        android:textSize="18sp"
        android:background="@drawable/roundbox_orange" />

</RelativeLayout>
