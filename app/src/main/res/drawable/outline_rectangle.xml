<!-- dotted_round_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape: Round Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius for the roundness -->
        </shape>
    </item>

    <!-- Dotted Outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
            android:width="2dp"
            android:color="#E3E3E3"
            android:dashWidth="10dp"
            android:dashGap="5dp"
            />
            <corners android:radius="10dp" /> <!-- Adjust the radius to match the background shape -->
        </shape>
    </item>

</layer-list>
